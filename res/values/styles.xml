<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyBlueActionBar" parent="android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/blue</item>
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
    </style>
    
    <style name="MySecondaryActionBar" parent="android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/blue_light</item>
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="MyThemeBlue" parent="android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyBlueActionBar</item>
    </style>
    
        <style name="MyThemeSecondary" parent="android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MySecondaryActionBar</item>
    </style>

</resources>